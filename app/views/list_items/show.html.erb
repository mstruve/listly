<%- model_class = ListItem -%>
<div class="page-header">
  <h1><%=t '.title', :default => ListItem %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:item_name) %></dt>
      <dd><pre class="prettyprint"><%= @list_item.item_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @list_item.description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:size) %></dt>
      <dd><pre class="prettyprint"><%= @list_item.size %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:number_wanted) %></dt>
      <dd><pre class="prettyprint"><%= @list_item.number_wanted %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:store_name) %></dt>
      <dd><pre class="prettyprint"><%= @list_item.store_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:url) %></dt>
      <dd><pre class="prettyprint"><%= @list_item.url %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              list_items_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_list_item_path(@list_item), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              list_item_path(@list_item),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

