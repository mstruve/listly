<%= simple_form_for @list, :html => { :class => 'form-horizontal form-model', :multipart => true } do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :description, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :list_type, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :list_type, :class => 'text-field form-control' %>
    </div>
  </div>

  <%= f.fields_for :list_items do |li| %>
    <%= render 'list_item_fields', f: li %>
  <% end %>

  <%= link_to_add_fields "Add Item", f, :list_items %>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  lists_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
